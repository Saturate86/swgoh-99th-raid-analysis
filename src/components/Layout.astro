---
import Logo from './Logo.astro';
import Navigation from './Navigation.astro';
import { PROJECT_CONFIG } from '../config/project.ts';
import guildConfig from '../config/guild.json';
import '../styles/global.css';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href={`${PROJECT_CONFIG.baseUrl}favicon.svg`} />
    <link rel="apple-touch-icon" sizes="180x180" href={`${PROJECT_CONFIG.baseUrl}${guildConfig.logoFile || 'bataillon-logo.png'}`} />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={PROJECT_CONFIG.githubUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={guildConfig.description || PROJECT_CONFIG.description} />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={PROJECT_CONFIG.githubUrl} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={PROJECT_CONFIG.description} />
    
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.js"></script>
  </head>
  
  <body class="p-2 sm:p-5">
    <div class="max-w-[1600px] mx-auto mobile-content">
      <div class="flex flex-col items-center mb-4 sm:mb-6">
        <div class="flex items-center gap-3 mb-2 sm:mb-4">
          <Logo size="lg" className="mobile-logo" />
          <h1 class="text-center text-heading text-2xl sm:text-4xl mobile-title">{guildConfig.title || PROJECT_CONFIG.title}</h1>
        </div>
        <p class="text-center text-gray-400 text-xs sm:text-sm mt-1 sm:mt-2">{guildConfig.description || PROJECT_CONFIG.description}</p>
      </div>
      
      <Navigation />
      
      <div id="error" class="hidden my-4 sm:my-8">
        <!-- Error content will be dynamically inserted here -->
      </div>

      <div id="content">
        <slot />
      </div>

      <div class="text-center mt-8 sm:mt-12 py-4 sm:py-6 border-t border-gray-700">
        <div class="flex justify-center mb-2 sm:mb-3">
          <Logo size="sm" />
        </div>
        <p class="text-gray-400 text-xs sm:text-sm">{PROJECT_CONFIG.title} for Star Wars: Galaxy of Heroes</p>
        <p class="text-gray-500 text-xs mt-1">
          Built with Astro.js â€¢ Automatically updated based on CSV files from Wookiebot
          <br />
          <a href={PROJECT_CONFIG.githubUrl} target="_blank" rel="noopener noreferrer" class="text-cyan-400 hover:text-cyan-300 transition-colors">
            ðŸ“‚ View on GitHub
          </a>
        </p>
      </div>
    </div>
  </body>
</html>
